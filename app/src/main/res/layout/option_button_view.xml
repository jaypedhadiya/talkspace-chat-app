<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_container"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/option_button_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.TalkSpace.CornerShapeForeFriendProfile"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/option_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Contact"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/option_button_icon"
        app:layout_constraintBottom_toBottomOf="@+id/option_button_icon"
        app:layout_constraintStart_toEndOf="@+id/option_button_icon"/>


</androidx.constraintlayout.widget.ConstraintLayout>
