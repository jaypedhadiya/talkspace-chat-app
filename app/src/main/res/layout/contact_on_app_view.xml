<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingEnd="18dp"
    android:paddingBottom="7dp"
    android:id="@+id/contacts_view"
    app:layout_constraintTop_toBottomOf="@+id/button_container">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contact_on_app_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="4dp"
        android:layout_marginStart="19dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.TalkSpace.CornerShapeForeFriendProfile"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J.k.pedhadiya"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/contact_on_app_profile_image"
        app:layout_constraintBottom_toTopOf="@+id/contact_about"
        app:layout_constraintStart_toEndOf="@+id/contact_on_app_profile_image"
        />

    <TextView
        android:id="@+id/contact_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hey, I am use Talk Space"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/contact_name"
        app:layout_constraintBottom_toBottomOf="@+id/contact_on_app_profile_image"
        app:layout_constraintStart_toEndOf="@+id/contact_on_app_profile_image"/>

    <ImageView
        android:id="@+id/contact_option"
        android:layout_width="25dp"
        android:layout_height="15dp"
        android:background="#00FFFFFF"
        android:layout_marginEnd="3dp"
        app:layout_constraintTop_toTopOf="@+id/contact_on_app_profile_image"
        app:layout_constraintBottom_toBottomOf="@+id/contact_on_app_profile_image"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/there_dot_horizontal"
        app:layout_constraintStart_toStartOf="@+id/contact_option"
        app:layout_constraintEnd_toEndOf="@+id/contact_option"
        app:layout_constraintTop_toTopOf="@+id/contact_option"
        app:layout_constraintBottom_toBottomOf="@+id/contact_option"/>
</androidx.constraintlayout.widget.ConstraintLayout>